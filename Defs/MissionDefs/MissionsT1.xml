		</skillRequirements>
		<label>Create uplink.</label>
		<objectiveType>Examine</objectiveType>
		<workAmount>20</workAmount>
		<targets>
			<li>CommsConsole</li>
		</targets>
		<images>
			<li>ObjImages/ImageOfABow</li>
		</images>
	</MissionsAndObjectives.ObjectiveDef>
	
